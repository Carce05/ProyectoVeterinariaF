@model IEnumerable<ProyectoVeterinaria.Models.Citas>

@{
    ViewData["Title"] = "ConsultarCitas";
    Layout = "~/Views/Shared/_LayoutLandingPage.cshtml";
}

<div class="card shadow mb-4">
    <div class="card-header py-3 bg-info">
        <h6 class="m-0 font-weight-bold text-white">Consultar Citas</h6>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-sm-12">

                <!-- DataTales Example -->
                <div class="table-responsive">
                   
                    <p>
                         <a class="btn btn-success" asp-action="AgendarCita"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-clipboard2-data" viewBox="0 0 16 16">
                         <path d="M9.5 0a.5.5 0 0 1 .5.5.5.5 0 0 0 .5.5.5.5 0 0 1 .5.5V2a.5.5 0 0 1-.5.5h-5A.5.5 0 0 1 5 2v-.5a.5.5 0 0 1 .5-.5.5.5 0 0 0 .5-.5.5.5 0 0 1 .5-.5h3Z"/>
                         <path d="M3 2.5a.5.5 0 0 1 .5-.5H4a.5.5 0 0 0 0-1h-.5A1.5 1.5 0 0 0 2 2.5v12A1.5 1.5 0 0 0 3.5 16h9a1.5 1.5 0 0 0 1.5-1.5v-12A1.5 1.5 0 0 0 12.5 1H12a.5.5 0 0 0 0 1h.5a.5.5 0 0 1 .5.5v12a.5.5 0 0 1-.5.5h-9a.5.5 0 0 1-.5-.5v-12Z"/>
                         <path d="M10 7a1 1 0 1 1 2 0v5a1 1 0 1 1-2 0V7Zm-6 4a1 1 0 1 1 2 0v1a1 1 0 1 1-2 0v-1Zm4-3a1 1 0 0 0-1 1v3a1 1 0 1 0 2 0V9a1 1 0 0 0-1-1Z"/>
                         </svg> Agendar Cita</a> 
                         <a class="btn btn-primary" asp-action="EnviarCorreo"  onclick="swal('Exito!', 'El Correo se envio con éxito!', 'success');"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-envelope" viewBox="0 0 16 16">
                         <path d="M0 4a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V4Zm2-1a1 1 0 0 0-1 1v.217l7 4.2 7-4.2V4a1 1 0 0 0-1-1H2Zm13 2.383-4.708 2.825L15 11.105V5.383Zm-.034 6.876-5.64-3.471L8 9.583l-1.326-.795-5.64 3.47A1 1 0 0 0 2 13h12a1 1 0 0 0 .966-.741ZM1 11.105l4.708-2.897L1 5.383v5.722Z"/>
                         </svg>Enviar Correo</a>   
                        
                    </p>
                    <form asp-controller="Citas" asp-action="ConsultarCitas" method="get">
                          <p>
                             <div class="form-row">

                             <div class="col-sm-2.8 ">    
                                 <input style="border: 2px solid #D0D1D3;-moz-border-radius: 6px;-webkit-border-radius: 6px;padding: 6px;" type="text" name="buscar" class="form-text "placeholder="Escriba el Nombre"/>
                             </div>
                                 <button type="submit" class="btn btn-info"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                                 <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z"/>
                                 </svg></button>
                      
                             </div>
                                
                          </p>
                    </form>
                  

                    <table class="table">
                        <thead>
                            <tr>

                                <th>
                                    @Html.DisplayNameFor(model => model.ClienteIdCliente)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.EmpleadoId)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.NombreDueño)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.NombreVeterinario)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.RazaMascota)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.EstadoMascota)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.FechaCita)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.HoraCita)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.MotivoCita)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.NombreServicio)
                                </th>

                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.ClienteIdCliente)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.EmpleadoId)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NombreDueño)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NombreVeterinario)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.RazaMascota)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.EstadoMascota)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FechaCita)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.HoraCita)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.MotivoCita)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NombreServicio)
                                    </td>

                                    <td>
                                  
                                        <a class="btn btn-warning" asp-action="EditarCita" asp-route-idCita="@item.IdCita"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                                        <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                                        <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z" />
                                        </svg> Modificar</a> 

                                       
                                         <a class="btn btn-danger" asp-action="EliminarCita" asp-route-idCita="@item.IdCita"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                         <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
                                         <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
                                         </svg> Eliminar</a>
                                
                             
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- DataTales Example -->
    </div>
</div>