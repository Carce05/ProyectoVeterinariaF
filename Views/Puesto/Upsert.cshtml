@model ProyectoVeterinaria.Models.Puesto

@{
    ViewData["Title"] = "Upsert";
    Layout = "~/Views/Shared/_LayoutLandingPage.cshtml";
}



<div class="card shadow mb-4">
    <div class="card-header py-3 bg-info">
        <h6 class="m-0 font-weight-bold text-white">Registrar un nuevo Puesto</h6>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Upsert">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="puesto" class="control-label"></label>
                        <input asp-for="puesto" class="form-control" />
                        <span asp-validation-for="puesto" class="text-danger"></span>
                    </div>

                        <div class="col-xs-12 col-sm-12 col-md-12">
   <button type="submit" class="btn btn-primary"  onclick="swal('Exito!', 'Se agregó con éxito!', 'success');"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-download" viewBox="0 0 16 16">
